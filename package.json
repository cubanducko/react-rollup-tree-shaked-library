{
    "name": "react-rollup-tree-shaked-example",
    "version": "1.0.0",
    "description": "A small example showing a tree-shaked react library with Rollup, SWC and Emotion",
    "author": "Ricardo Domínguez Álvarez",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cubanducko/react-rollup-tree-shaked-library"
    },
    "main": "dist/lib/index.js",
    "module": "dist/esm/index.js",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "types": "dist/lib/index.d.ts",
    "typings": "dist/lib/index.d.ts",
    "scripts": {
        "type-check": "tsc --noEmit",
        "test": "NODE_ENV=test jest --config jest.config.js",
        "build": "NODE_ENV=production rollup -c",
        "watch": "NODE_ENV=production rollup -c -w"
    },
    "dependencies": {
        "@swc/helpers": "^0.2.14"
    },
    "devDependencies": {
        "@emotion/jest": "^11.6.0",
        "@emotion/react": "^11.6.0",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@swc/core": "^1.2.111",
        "@swc/jest": "^0.2.8",
        "@testing-library/dom": "^8.11.1",
        "@testing-library/jest-dom": "^5.15.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@types/react": "^17.0.36",
        "jest": "^27.3.1",
        "prettier": "^2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "rollup": "^2.60.1",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-dts": "^4.0.1",
        "rollup-plugin-progress": "^1.1.2",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-swc": "^0.2.0",
        "rollup-plugin-typescript-paths": "^1.3.0",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "@emotion/react": ">=11.1.4",
        "react": ">=16.14.0",
        "react-dom": ">=16.14.0"
